<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get all user</title>
    <Style>
        table, th, td {
            border:1px solid black;
            border-collapse: collapse;
        }
        .btn-edit {
            color: #fff;
            background-color: #feb632;
            outline: none;
            border: none;
            width: 60px;
            height: 30px;
            border-radius: 10px;
            cursor: pointer;
            text-align: center;
            line-height: 30px;
            text-decoration: none;
            display: inline-block;

        }
        .btn-delete {
            color: #fff;
            background-color: #fa241c;
            outline: none;
            border: none;
            width: 60px;
            height: 30px;
            border-radius: 10px;
            cursor: pointer;
            text-align: center;
            line-height: 30px;
            text-decoration: none;
            display: inline-block;
        }
    </Style>
</head>
<body>
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
        <% for(var i=0; i < users.length; i++) { %>
            <tr>
              <td><%= users[i].email %></td>
              <td><%= users[i].lastName %></td>
              <td><%= users[i].firstName %></td>
              <td><%= users[i].address %></td>
              <td>
                  <a href="/edit-crud?id=<%= users[i].id %>" class="btn btn-edit">Edit</a>
                  <a href="/delete-crud?id=<%= users[i].id %>" class="btn btn-delete">Delete</a>
              </td>
            </tr>
        <% } %>
      </table>
</body>
</html>